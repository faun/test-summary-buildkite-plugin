%ul
  - failures.each do |failure|
    %li
      - if failure.details
        %details
          %summary
            %code
              = failure.summary
          %pre
            %code
              = failure.details
          - unless failure.job_id.nil?
            %p
              in
              %a{href: "##{failure.job_id}"}
                job
                = failure.job_id
      - else
        %code
          = failure.summary
